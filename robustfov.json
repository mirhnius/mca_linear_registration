{
    "name": "RobustFOV 6.0.4",
    "description": "FSL RobustFOV reduces the field of view of an image to remove the lower head and neck, enhancing brain extraction quality. Part of FSL.",
    "command-line": "robustfov [IN_FILE] [OUT_ROI] [BRAIN_SIZE] [MATRIX_OUTPUT] [DEBUG] [VERBOSE]",
    "inputs": [
      {
        "id": "in_file",
        "name": "Input File",
        "type": "File",
        "description": "Input filename.",
        "command-line-flag": "-i",
        "value-key": "[IN_FILE]",
        "optional": false
      },
      {
        "id": "out_roi",
        "name": "ROI Volume Output Name",
        "type": "String",
        "description": "ROI volume output name.",
        "command-line-flag": "-r",
        "value-key": "[OUT_ROI]",
        "optional": true
      },
      {
        "id": "brain_size",
        "name": "Brain Size",
        "type": "Number",
        "description": "Size of brain in z-dimension (default is 170mm). Specify to override.",
        "command-line-flag": "-b",
        "value-key": "[BRAIN_SIZE]",
        "default-value": 170,
        "optional": true
      },
      {
        "id": "matrix_output",
        "name": "Matrix Output Name",
        "type": "String",
        "description": "Matrix output name (roi to full fov), if specified.",
        "command-line-flag": "-m",
        "value-key": "[MATRIX_OUTPUT]",
        "optional": true
      },
      {
        "id": "debug",
        "name": "Debug",
        "type": "Flag",
        "description": "Turn on debugging output.",
        "command-line-flag": "--debug",
        "value-key": "[DEBUG]",
        "optional": true
      },
      {
        "id": "verbose",
        "name": "Verbose",
        "type": "Flag",
        "description": "Switch on diagnostic messages.",
        "command-line-flag": "-v",
        "value-key": "[VERBOSE]",
        "optional": true
      }
    ],
    "output-files": [
      {
        "id": "out_roi_file",
        "name": "Output ROI File",
        "description": "path to the output file of the ROI, generated by RobustFOV.",
        "path-template": "[OUT_ROI].nii",
        "optional": true,
        "command-line-flag": "-r",
        "path-template-stripped-extensions": [
            ".nii.gz",
            ".nii"
        ]
      },
      {
        "id": "matrix_output_file",
        "name": "Matrix Output File",
        "description": " path to Matrix output name (roi to full fov), if specified.",
        "command-line-flag": "-m",
        "value-key": "[MATRIX_OUTPUT_FILE]",
        "optional": true,
        "path-template": "[MATRIX_OUTPUT_FILE].mat",
        "path-template-stripped-extensions": [
          ".mat"
        ]        
      }
    ],
    "container-image": {
      "type": "docker",
      "image": "vnmd/fsl_6.0.4",
      "index": "index.docker.io"
    },
    "schema-version": "0.5",
    "tags": {
      "domain": ["MRI", "Neuroimaging", "FSL", "Image processing"],
      "method": ["Field of View Reduction", "Preprocessing"]
    },
    "tool-version": "6.0.4"
  }
  